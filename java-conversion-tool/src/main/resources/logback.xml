<?xml version="1.0"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="DEV-LOG" class="ch.qos.logback.core.FileAppender">
        <file>dev-log.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="DEV-LOG" level="INFO">
        <appender-ref ref="DEV-LOG"/>
    </logger>
    <logger name="CLIENT-LOG" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>