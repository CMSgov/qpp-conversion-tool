{
	"Resources": {
		"Bob": {
			"Type": "AWS::KMS::Key",
			"Properties": {
				"Description": "meep",
				"Enabled": true,
				"KeyPolicy": {
					"Statement": [
						{
							"Sid": "Enable IAM User Permissions",
							"Effect": "Allow",
							"Principal": {
								"AWS": ["arn:aws:iam::123456789012:root"]
							},
							"Action": "kms:*",
							"Resource": "*"
						},
						{
							"Sid": "Allow access for Key Administrators",
							"Effect": "Allow",
							"Principal": {
								"AWS": ["arn:aws:iam::123456789012:user/some-admin"]
							},
							"Action": [
								"kms:Create*",
								"kms:Describe*",
								"kms:Enable*",
								"kms:List*",
								"kms:Put*",
								"kms:Update*",
								"kms:Revoke*",
								"kms:Disable*",
								"kms:Get*",
								"kms:Delete*",
								"kms:TagResource",
								"kms:UntagResource",
								"kms:ScheduleKeyDeletion",
								"kms:CancelKeyDeletion"
							],
							"Resource": "*"
						},
						{
							"Sid": "Allow use of the key",
							"Effect": "Allow",
							"Principal": {
								"AWS": [
									"arn:aws:iam::123456789012:role/role1",
									"arn:aws:iam::123456789012:user/auser"
								]
							},
							"Action": [
								"kms:Encrypt",
								"kms:Decrypt",
								"kms:ReEncrypt*",
								"kms:GenerateDataKey*",
								"kms:DescribeKey"
							],
							"Resource": "*"
						}
					]
				}
			}
		},
		"BobAlias": {
			"Type": "AWS::KMS::Alias",
			"Properties": {
				"AliasName": "alias/Bob",
				"TargetKeyId": {
					"Ref": "Bob"
				}
			}
		}
	}
}